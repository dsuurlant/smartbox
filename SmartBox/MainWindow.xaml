<Window x:Class="SmartBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartBox"
        xmlns:properties="clr-namespace:SmartBox.Properties"
        mc:Ignorable="d"
        Title="SMARTBox" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="167*"/>
            <ColumnDefinition Width="350*"/>
        </Grid.ColumnDefinitions>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="321" Margin="-1,-1,0,0" VerticalAlignment="Top" Width="518" Grid.ColumnSpan="2">
            <TabItem Header="Games">
                <Grid Background="#FFE5E5E5">
                    <Label x:Name="label" Content="Games List" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0" Width="70"/>
                    <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Height="146" Margin="10,27,0,0" VerticalAlignment="Top" Width="488"/>
                    <Button x:Name="button" Content="Load" HorizontalAlignment="Left" Margin="10,178,0,0" VerticalAlignment="Top" Width="75"/>
                </Grid>
            </TabItem>
            <TabItem Header="Configuration">
                <Grid Background="#FFE5E5E5">
                    <Label x:Name="label1" Content="Game collection root path" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0" Width="151"/>
                    <TextBox x:Name="gamepathTextBox" HorizontalAlignment="Left" Height="23" Margin="10,26,0,0" TextWrapping="Wrap" Text="/{Binding Source={x:Static properties:Settings.Default}, Path=GameCollectionPath}" VerticalAlignment="Top" Width="433"/>
                    <Button x:Name="gamepathSearchBtn" Content="Search" HorizontalAlignment="Left" Margin="448,26,0,0" VerticalAlignment="Top" Width="50" Click="gamepathSearchBtn_Click"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
